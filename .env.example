# ============================================
# Doubao Batch Translator 环境配置示例
# ============================================

# Doubao API 配置
ARK_API_KEY=your_doubao_api_key_here
API_ENDPOINT=https://ark.cn-beijing.volces.com/api/v3/responses
DEFAULT_MODEL=doubao-seed-translation-250915

# 翻译配置
DEFAULT_SOURCE_LANG=en
DEFAULT_TARGET_LANG=zh
MAX_INPUT_TOKENS=1000
MAX_RETRIES=3
RETRY_DELAY_MS=1000

# 文件处理配置
SUPPORTED_EXTENSIONS=.html,.htm,.md,.markdown
SUPPORTED_ENCODINGS=utf8,gbk
DEFAULT_ENCODING=utf8
MAX_FILE_SIZE_MB=10

# 缓存配置
CACHE_DIR=./.cache
CACHE_TTL_HOURS=24
ENABLE_CACHE=true

# 日志配置
LOG_LEVEL=info  # debug, info, warn, error
VERBOSE=false
LOG_FILE=./logs/translation.log

# 性能配置
MAX_CONCURRENT_FILES=5
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT_MS=30000

# 安全配置
ENABLE_RATE_LIMITING=true
REQUESTS_PER_MINUTE=60